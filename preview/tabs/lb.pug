mixin lb
  .field
    label.ui(for='lb-lb-width')
      | Letterbox
      code (lb=&lt;width&gt;,&lt;height&gt;)
  .two.fields
    .field
      .ui.labeled.input
        label.ui.label(for='lb-lb-width') width
        input#lb-lb-width(type='number', name='lb[0]', value='300')
    .field
      .ui.labeled.input
        label.ui.label(for='lb-lb-height') height
        input#lb-lb-height(type='number', name='lb[1]', value='300')
  
  .inline.field
    label.ui
      | Background
      code (background=&lt;string&gt;)
    input#lb-background(type='color', name='background', value='#e8e8e8', style='width: 2em')
