mixin fit
  .field
    label.ui(for='fit-fit-width')
      | Fit
      code (fit=&lt;width&gt;,&lt;height&gt;)
  .two.fields
    .field
      .ui.labeled.input
        label.ui.label(for='fit-fit-width') width
        input#fit-fit-width(type='number', name='fit[0]', value='300')
    .field
      .ui.labeled.input
        label.ui.label(for='fit-fit-height') height
        input#fit-fit-height(type='number', name='fit[1]', value='300')
