include ./standard.pug
include ./crop.pug
include ./fit.pug
include ./lb.pug
include ./resize.pug

mixin section(name)
  h2.ui.header #{name}
  .ui.segments(style='margin-bottom: 2rem;')
    .ui.segment
      form.ui.form(id=name + '-form')
        h4.ui.dividing.header Settings
        
        if name === 'standard'
          +standard()
        else if name === 'resize'
          +resize()
        else if name === 'fit'
          +fit()
        else if name === 'lb'
          +lb()
        else if name === 'crop'
          +crop()
        
        h4.ui.dividing.header General settings
        +settings(name)

    .ui.segment
      +image(name)

mixin settings(name)
  .two.fields
    .field
      label(for=name + '-zoom')
        | Zoom 
        code (zoom=&lt;number&gt;)
      input(id=name + '-zoom', type='number', name='zoom', min='1', max='5', step='0.5', value='')
    .field
      label(for=name + '-quality')
        | Quality 
        code (quality=&lt;number&gt;)
      input(id=name + '-zoom', type='number', name='quality', min='0', max='100', value='')

  .two.fields
    .field
      .ui.checkbox
        input.hidden(id=name + '-webp', type='checkbox', name='webp', tabindex='0', value='true')
        label(for=name + '-webp')
          | Use WebP 
          code (webp=&lt;true|false|1|0&gt;)

    .field
      button.ui.button.compact.grey.right.floated(id=name + '-clear', type='button')
        | Clear

mixin image(name)
  img.ui.image.centered(id=name + '-image', alt='TT Nanny', style='padding-bottom: 2rem;')
  .ui.bottom.attached.label
    | URL
    span.detail(id=name + '-url')
