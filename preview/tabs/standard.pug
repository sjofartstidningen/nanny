mixin standard
  .two.fields
    .field
      label(for='standard-w')
        | Width 
        code (w=&lt;number&gt;)
      input#standard-w(type='number', name='w', value='')
    .field
      label(for='standard-h')
        | Height 
        code (h=&lt;number&gt;)
      input#standard-h(type='number', name='h', value='')
  
  .field
    .ui.checkbox
      input.hidden(id=name + '-crop', type='checkbox', name='crop' tabindex='0', value='true')
      label(for=name + '-crop')
        | Crop 
        code (crop=&lt;boolean&gt;)
