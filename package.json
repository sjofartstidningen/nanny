{
  "name": "@sjofartstidningen/nanny",
  "version": "0.0.0-development",
  "description": "An image processing service compatible with humanmade/tachyon",
  "main": "index.js",
  "repository": "git@github.com:sjofartstidningen/nanny.git",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "ncc build src/handler.ts -o dist",
    "test": "jest --env=node",
    "predeploy": "docker build -t nanny-deploy .",
    "deploy": "docker run --env-file .env --env STAGE=${STAGE} nanny-deploy yarn serverless deploy --stage=$STAGE",
    "predeploy:fn": "docker build -t nanny-deploy .",
    "deploy:fn": "docker run --env-file .env --env STAGE=${STAGE} nanny-deploy yarn serverless deploy function -f processImage --stage=${STAGE}",
    "preview:server": "parcel build preview/server.ts --target node && node dist/server.js",
    "preview:client": "parcel serve preview/index.pug"
  },
  "dependencies": {
    "animated-gif-detector": "^1.2.0",
    "aws-sdk": "^2.391.0",
    "http-errors": "^1.7.1",
    "mime-types": "^2.1.21",
    "ramda": "^0.26.1",
    "sharp": "^0.22.1",
    "smartcrop-sharp": "^2.0.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.17",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "^24.0.13",
    "@types/mime-types": "^2.1.0",
    "@types/ramda": "^0.26.8",
    "@types/s3rver": "^0.0.31",
    "@types/sharp": "^0.22.2",
    "@zeit/ncc": "^0.18.5",
    "async-exit-hook": "^2.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.0",
    "parcel-bundler": "^1.11.0",
    "prettier": "^1.15.3",
    "pug": "^2.0.3",
    "s3rver": "^3.1.0",
    "serverless": "^1.36.1",
    "serverless-apigw-binary": "^0.4.4",
    "serverless-apigwy-binary": "^1.0.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.4",
    "typescript-tslint-plugin": "^0.4.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.ts": [
        "jest --env=node --passWithNoTests --findRelatedTests",
        "tslint --fix"
      ],
      "*.{js,ts,json,md,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  }
}
