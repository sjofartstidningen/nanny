{
  "name": "@sjofartstidningen/nanny",
  "version": "0.0.0-development",
  "description": "An image processing service compatible with humanmade/tachyon",
  "main": "index.js",
  "repository": "git@github.com:sjofartstidningen/nanny.git",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "parcel build src/handler.ts --target=node",
    "package": "serverless package",
    "deploy": "serverless deploy",
    "test": "jest --env=node"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@types/aws-lambda": "^8.10.17",
    "@types/jest": "^23.3.13",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "9.x",
    "babel-jest": "^23.6.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "5.x",
    "eslint-config-react-app": "^3.0.6",
    "eslint-plugin-flowtype": "2.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "parcel-bundler": "^1.11.0",
    "prettier": "^1.15.3",
    "serverless": "^1.36.1",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.4",
    "typescript-eslint-parser": "^22.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.{js,ts}": [
        "jest --env=node --passWithNoTests --findRelatedTests",
        "eslint --fix",
        "git add"
      ],
      "*.{js,ts,json,md,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "proseWrap": "always"
  },
  "dependencies": {
    "esm": "^3.1.0"
  }
}
