{
  "name": "@sjofartstidningen/nanny",
  "version": "0.0.0",
  "description": "An image processing service compatible with humanmade/tachyon",
  "main": "index.js",
  "repository": "git@github.com:sjofartstidningen/nanny.git",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "ncc build src/handler.ts -o dist --external aws-sdk",
    "test": "jest --env=node",
    "deploy": "lambi --env-file .env --env STAGE=${STAGE} 'yarn run build && serverless deploy'",
    "deploy:fn": "lambi --env-file .env --env STAGE=${STAGE} 'yarn run build && serverless deploy -f processImage'",
    "remove": "lambi --env-file .env --env STAGE=${STAGE} 'serverless remove --stage=${STAGE}'",
    "example": "parcel serve preview/index.pug"
  },
  "dependencies": {
    "animated-gif-detector": "^1.2.0",
    "aws-sdk": "^2.391.0",
    "http-errors": "^1.7.1",
    "mime-types": "^2.1.21",
    "ramda": "^0.26.1",
    "sharp": "^0.22.1",
    "smartcrop-sharp": "^2.0.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@fransvilhelm/lambi": "^1.1.0",
    "@types/aws-lambda": "^8.10.17",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "^24.0.13",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^12.0.2",
    "@types/ramda": "^0.26.8",
    "@types/s3rver": "^0.0.31",
    "@types/sharp": "^0.22.2",
    "@typescript-eslint/eslint-plugin": "1.x",
    "@typescript-eslint/parser": "1.x",
    "@zeit/ncc": "^0.18.5",
    "async-exit-hook": "^2.0.1",
    "babel-eslint": "10.x",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "5.x",
    "eslint-config-react-app": "4.0.0",
    "eslint-plugin-flowtype": "2.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "1.5.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.0",
    "parcel-bundler": "^1.11.0",
    "prettier": "^1.15.3",
    "pug": "^2.0.3",
    "s3rver": "^3.1.0",
    "serverless": "^1.36.1",
    "serverless-api-cloudfront": "^0.9.5",
    "serverless-apigw-binary": "^0.4.4",
    "serverless-apigwy-binary": "^1.0.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.ts": [
        "jest --env=node --passWithNoTests --findRelatedTests",
        "eslint --fix"
      ],
      "*.{js,ts,json,md,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
