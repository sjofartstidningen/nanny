{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": ["es6", "es2017", "dom"],
    "moduleResolution": "node",
    "rootDir": "./src",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"]
}
