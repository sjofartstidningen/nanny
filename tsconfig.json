{
  "compilerOptions": {
    "rootDir": "src",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "composite": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "preserveWatchOutput": true,
    "plugins": [{ "name": "typescript-tslint-plugin" }],
    "typeRoots": ["./node_modules/@types", "types"]
  },
  "include": ["src"]
}
